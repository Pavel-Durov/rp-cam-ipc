{
  "name": "workspace",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pavel-Durov/rp-cam-ipc.git"
  },
  "scripts": {
    "test": "npm-run-all -p test:js test:py",
    "test:js": "_mocha 'app/**/*.spec.js' --timeout 30000",
    "test:py": "python3 -m unittest discover -s ./app/py_camera/ -p '*_test.py'",
    "start:ipc-server": "pm2 start app/server/ipc-server.js --name piCam-IPC-Server",
    "stop:ipc-server": "pm2 stop piCam-IPC-Server",
    "start:ipc-telegramBot": "pm2 start app/telegram/ipc-bot.js --name piCam-IPC-TelegramBot",
    "stop:ipc-telegramBot": "pm2 stop piCam-IPC-TelegramBot",
    "start:ipc-media": "python3 app/py_camera/ipc-media.py",
    "stop:ipc-media": "pkill -f ipc-media.py",
    "lint": "eslint .",
    "stop": "npm-run-all -p stop:ipc-server stop:ipc-telegramBot stop:ipc-media",
    "start": "npm-run-all -s start:ipc-server start:ipc-telegramBot start:ipc-media",
    "coverage": "nyc --reporter=text-lcov _mocha 'app/**/*.spec.js' --timeout 30000 && codecov"
  },
  "author": "Pavel Durov",
  "license": "ISC",
  "dependencies": {
    "debug": "4.1.0",
    "node-ipc": "9.1.1",
    "ramda": "0.25.0",
    "telegram-bot-api": "1.2.1"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "codecov": "3.1.0",
    "eslint": "5.7.0",
    "mocha": "5.2.0",
    "npm-run-all": "4.1.3",
    "nyc": "13.1.0",
    "pm2": "3.0.0"
  }
}
